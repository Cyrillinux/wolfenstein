        "gulp-rename"               : "~1.2.0",
        "gulp-filesize"             : "~0.0.6",
        "gulp-jshint"               : "~1.6.1",
        "gulp-handlebars"           : "~2.1.0",
        "gulp-define-module"        : "~0.1.1",
        "gulp-header"               : "~1.0.2",
        "jshint-stylish"            : "0.4.0",
        "jasmine-node-karma"        : "~1.6.1",
        "karma"                     : "~0.12.28",
        "karma-phantomjs-launcher"  : "0.1.4",
        "karma-jasmine"             : "0.1.5",
        "node-webkit-builder"       : "1.0.4"
    },

    "window": {
